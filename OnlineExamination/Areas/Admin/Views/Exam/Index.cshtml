@model IEnumerable<ExamDetails>

<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Exam List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Exam" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Add Exam
            </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Subject Name</th>
                <th>Exam name</th>
                <th>Exam Date</th>
                <th>Exam Options</th>
                <th>Question Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="15%">
                        @obj.Category.CategoryName
                    </td>
                    <td width="15%">
                        @obj.Subject.SubjectName
                    </td>
                    <td width="15%">
                        @obj.Name
                    </td>
                    <td width="15%">
                        @obj.ExamDate
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Exam" asp-action="Upsert" asp-route-id="@obj.ExamId" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            @*<a asp-controller="Exam" asp-action="Delete" asp-route-id="@obj.ExamId" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>*@
                            <form asp-action="Delete" asp-controller="Exam" method="post" asp-route-id="@obj.ExamId">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')"><i class="bi bi-trash-fill"></i>Delete</button>
                            </form>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
@*                            <a asp-controller="Question" asp-action="Index" asp-route-id="@obj.ExamId" class="btn btn-primary mx-2"><i class="bi bi-info-circle"></i> Details</a>
*@                            <a asp-controller="Question" asp-action="ExamQuestion" asp-route-id="@obj.ExamId" class="btn btn-primary mx-2"><i class="bi bi-info-circle"></i> All Questions</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
