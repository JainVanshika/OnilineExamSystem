@model IEnumerable<Questions>
@{
    ViewData["Title"] = "Index";
}
<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Questions</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Question" asp-action="AddQuestion" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Add Question
            </a>
            <a asp-controller="Exam" asp-action="Index" class="btn btn-secondary" style="width:150px">
                <i class="bi bi-skip-backward"></i>&nbsp;
                Back to List
            </a>
        </div>
    </div>
    </br>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Exam Name
                </th>
                
                <th>
                    Question
                </th>
                <th>
                    Marks per question
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="30%">
                        @obj.ExamDetails.Name
                    </td>
                    
                    <td width="30%">
                        @obj.Ques
                    </td>
                    <td width="15%">
                        @obj.MarksPerQues
                    </td>
                    <td>
                        <div class="w-100 btn-group align-middle" role="group">
                            <a asp-controller="Question" asp-action="Detail" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-info-circle"></i> Details</a>
                            <a asp-controller="Question" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i> Edit</a>
                            <form asp-action="Delete" asp-controller="Question" method="post" asp-route-id="@obj.Id">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')"><i class="bi bi-trash-fill"></i>Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

