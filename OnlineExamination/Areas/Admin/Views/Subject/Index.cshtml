@model IEnumerable<Subject>
@{
    ViewData["Title"] = "Index";
}
<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Subject List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Subject" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Subject
            </a>
        </div>
    </div>
    </br>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Subject Name
                </th>
                <th>
                    Options
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="25%">
                        @obj.Category.CategoryName
                    </td>
                    <td width="25%">
                        @obj.SubjectName
                    </td>
                    <td>
                        <div class="w-100 btn-group align-middle" role="group">
                            <a asp-controller="Subject" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Subject" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

