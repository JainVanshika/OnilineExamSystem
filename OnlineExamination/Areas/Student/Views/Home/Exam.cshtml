@model IEnumerable<ExamDetails>

<div class="row pb-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Exam list for selected subject</h2>
        </div>

        <hr/>
    </div>
    <br/>
    <br/>
    @foreach (var exam in Model)
    {
        <div class="col-lg-3 col-md-4">
            <div class="row p-2">
                <div class="col-152 p-2" style="border:2px solid #008cba; border-radius:5px;">
                    <div class="card">

                        <div class="card-body">
                            <div class="pl-1">
                                <h5 class="card-title  h5text-primary"><strong>Exam Name: @exam.Name</strong></h5>
                            </div>
                            <div class="pl-1">
                                <p>Exam Description:<b>@exam.Description</b></p>
                            </div>
                            <div class="pl-1">
                                <p>Passing Marks:<b>@exam.PassingMark</b></p>
                            </div>
                            <div class="pl-1">
                                <p>Total Marks:<b>@exam.TotalMark</b></p>
                            </div>
                            <div class="pl-1">
                                <p>Exam Date:<b>@exam.ExamDate.ToShortDateString()</b></p>
                            </div><div class="pl-1">
                                <p>Exam Duration:<b>@exam.ExamDuration</b></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="QuesAns" class="btn btn-primary form-control" asp-route-id="@exam.ExamId">
                            Take Exam
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>