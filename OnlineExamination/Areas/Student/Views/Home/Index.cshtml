@model IEnumerable<Category>

<div class="row pb-3">
    <div class="row pb-2">
            <h2 class="text-primary"> Course Category</h2>
            <hr/>
        </div>
    @foreach (var category in Model)
    {
        <div class="col-lg-3 col-md-4">
            <div class="row p-2">
                <div class="col-152 p-2" style="border:2px solid #008cba; border-radius:5px;">
                    <div class="card">

                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title  h5text-primary">@category.CategoryName</p>
                            </div>
                            @*<div class="pl-1">
                                <p>List Price:<strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                            </div>
                            <div class="pl-1">
                                <p>As low as:<b>$@product.Price100.ToString("0.00")</b></p>
                            </div>*@
                        </div>
                    </div>
                    <div>
                        <a asp-action="Subject" class="btn btn-primary form-control" asp-route-id="@category.Id">
                            Choose Subject
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>