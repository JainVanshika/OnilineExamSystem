@model IEnumerable<Subject>

<div class="row pb-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Subject list for selected course</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-skip-backward"></i>&nbsp; Back to Course
            </a>

        </div>
        <hr/>
    </div>
    <br/>
    <br/>
   
    @foreach (var subject in Model)
    {

        <div class="col-lg-3 col-md-4">
            <div class="row p-2">
                <div class="col-152 p-2" style="border:2px solid #008cba; border-radius:5px;">
                    <div class="card">

                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title  h5text-primary">@subject.SubjectName</p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Exam" class="btn btn-primary form-control" asp-route-id="@subject.Id">
                            Choose Exam
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
